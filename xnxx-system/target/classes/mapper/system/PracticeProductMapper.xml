<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csxnxx.system.mapper.PracticeProductMapper">
    
    <resultMap type="PracticeProduct" id="PracticeProductResult">
        <result property="productId"    column="product_id"    />
        <result property="name"    column="name"    />
        <result property="price"    column="price"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPracticeProductVo">
        select product_id, name, price, create_time, update_time from practice_product
    </sql>

    <select id="selectPracticeProductList" parameterType="PracticeProduct" resultMap="PracticeProductResult">
        <include refid="selectPracticeProductVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="price != null "> and price = #{price}</if>
        </where>
    </select>
    
    <select id="selectPracticeProductByProductId" parameterType="Long" resultMap="PracticeProductResult">
        <include refid="selectPracticeProductVo"/>
        where product_id = #{productId}
    </select>

    <insert id="insertPracticeProduct" parameterType="PracticeProduct" useGeneratedKeys="true" keyProperty="productId">
        insert into practice_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="price != null">price,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="price != null">#{price},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePracticeProduct" parameterType="PracticeProduct">
        update practice_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="price != null">price = #{price},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where product_id = #{productId}
    </update>

    <delete id="deletePracticeProductByProductId" parameterType="Long">
        delete from practice_product where product_id = #{productId}
    </delete>

    <delete id="deletePracticeProductByProductIds" parameterType="String">
        delete from practice_product where product_id in 
        <foreach item="productId" collection="array" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </delete>
</mapper>