<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csxnxx.system.mapper.PracticeOrderMapper">

    <resultMap type="PracticeOrder" id="PracticeOrderResult">
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="productId" column="product_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectPracticeOrderVo">
        select order_id, user_id, product_id, create_time, update_time
        from practice_order
    </sql>

    <select id="selectPracticeOrderList" parameterType="PracticeOrder" resultMap="PracticeOrderResult">
        <include refid="selectPracticeOrderVo"/>
        <where>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="productId != null ">and product_id = #{productId}</if>
        </where>
    </select>

    <select id="selectPracticeOrderByOrderId" parameterType="Long" resultMap="PracticeOrderResult">
        <include refid="selectPracticeOrderVo"/>
        where order_id = #{orderId}
    </select>

    <insert id="insertPracticeOrder" parameterType="PracticeOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into practice_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updatePracticeOrder" parameterType="PracticeOrder">
        update practice_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deletePracticeOrderByOrderId" parameterType="Long">
        delete
        from practice_order
        where order_id = #{orderId}
    </delete>

    <delete id="deletePracticeOrderByOrderIds" parameterType="String">
        delete from practice_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>
